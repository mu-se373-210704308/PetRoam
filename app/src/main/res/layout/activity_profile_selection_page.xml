<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkpurple"
    tools:context=".profile_selection_page">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="99dp"
        android:text="SELECT YOUR PROFILE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/petwalkerimage"
        android:layout_width="163dp"
        android:layout_height="271dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toStartOf="@+id/petownerimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/petwalker" />

    <ImageView
        android:id="@+id/petownerimage"
        android:layout_width="165dp"
        android:layout_height="189dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/petwalkerimage"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/petowner" />
</androidx.constraintlayout.widget.ConstraintLayout>